<Window
    x:Class="Task8.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task8"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel LastChildFill="False">
        <Button Height="70" DockPanel.Dock="Bottom">Bottom</Button>
        <Button Height="70" DockPanel.Dock="Top">Top</Button>
        <Button Width="70" DockPanel.Dock="Left">Left</Button>
        <Button Width="70" DockPanel.Dock="Left">Left</Button>
        <Button Width="70" DockPanel.Dock="Right">Right</Button>
        <Button Width="70" DockPanel.Dock="Right">Right</Button>
    </DockPanel>
</Window>
