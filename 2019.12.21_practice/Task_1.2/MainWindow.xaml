<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Slider x:Name="slider1" Grid.Row="1" Margin="50,50" VerticalAlignment="Center" Maximum="100" Minimum="0"></Slider>
        <ProgressBar Grid.Row="0" Margin="50,50" VerticalAlignment="Center" MinHeight="30" Value="{Binding ElementName=slider1, Path=Value}"></ProgressBar>
    </Grid>
</Window>
