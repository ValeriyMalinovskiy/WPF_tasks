<Window
    x:Class="Task5.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task5"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <GroupBox Margin="30" Header="GroupBox Sample">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" VerticalAlignment="Bottom">First Name</TextBlock>
            <TextBox Grid.Row="1" />
            <TextBlock Grid.Row="2" VerticalAlignment="Bottom">Last Name</TextBlock>
            <TextBox Grid.Row="3" />
            <Button Grid.Row="5">Add User</Button>
        </Grid>
    </GroupBox>
</Window>
